{
	"branches": ["master", {name: "prerelease", "prerelease": true}],
  "repositoryUrl": "https://github.com/genesiscommunitysuccess/custom-elements-lsp",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "*!",
            "release": "major"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
				"linkReferences": false,
        "presetConfig": {
					"issuePrefixes": ["FUI-", "ISSUE-"],
					"issueUrlFormat": ""
        },
        "releaseRules": [
          {
            "type": "*!",
            "release": "major"
          }
        ]
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog"
      }
    ],
    [
			"@semantic-release/exec", {
				"prepareCmd": "npx --no lerna version \"${nextRelease.version}\" --yes --no-push --ignore-scripts --no-git-tag-version --exact && npm i --package-lock-only"}
				}
		],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "package-lock.json", ["packages/**/package.json", "!**/node_modules/**/package.json"]],
        "message": "chore: release ${nextRelease.version} [skip ci] ISSUE-0"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": false,
        "failComment": false,
        "releasedLabels": false,
        "labels": false
      }
    ],
  ]
}
