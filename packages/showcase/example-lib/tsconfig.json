{
  "compilerOptions": {
    "plugins": [
      {
        "name": "@genesiscommunitysuccess/custom-elements-lsp",
        "srcRouteFromTSServer": "../../..",
        "designSystemPrefix": "example",
        "fastEnable": true,
        "parser": {
          "timeout": 1000,
          "src": "./packages/showcase/example-lib/lib/**/*.{js,ts}",
          "dependencies": ["!**/@custom-elements-manifest/**/*"]
        }
      }
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/dts",
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["DOM", "DOM.Iterable", "ES2015", "ES2016", "ES2017", "ES2019"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "./dist/esm",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "rootDir": "./lib",
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "target": "ES2020"
  },
  "include": ["./lib/**/*"]
}
